                        case -110:
                            $.ligerDialog.warn("文件 [" + file.name + "] 大小超出系统限制的" + $('#file_Person').uploadify('settings', 'fileSizeLimit') + "大小！");
                            break;
                        case -120:
                            $.ligerDialog.warn("文件 [" + file.name + "] 大小异常！");
                            break;
                        case -130:
                            $.ligerDialog.warn("文件 [" + file.name + "] 类型不正确！");
                            break;
                    }
